generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int               @id @default(autoincrement())
  name              String
  email             String            @unique
  password          String
  role              String            @default("USER")
  bookmarks         Bookmark[]
  chatSessions      ChatSession[]
  learningHistories LearningHistory[]
}

model Bookmark {
  id          Int       @id @default(autoincrement())
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  title       String
  description String?
  url         String
  image       String?
  publishedAt DateTime?
  source      String?
  createdAt   DateTime  @default(now())
}

// Top-level categories, e.g., "Indian History", "Geography"
model Subject {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  topics Topic[]
}

// Sub-categories, e.g., "Mughal Empire", "Rivers of India"
model Topic {
  id        Int               @id @default(autoincrement())
  name      String
  subject   Subject           @relation(fields: [subjectId], references: [id])
  subjectId Int
  content   ContentBlock[]
  learnedBy LearningHistory[]
  chatSessions      ChatSession[] // <-- 1. CHANGED THIS
}

// The raw knowledge snippets for the AI to learn from
model ContentBlock {
  id      Int    @id @default(autoincrement())
  content String @db.Text
  topic   Topic  @relation(fields: [topicId], references: [id])
  topicId Int
}

// Tracks what a user has "learned" for revision
model LearningHistory {
  id      Int   @id @default(autoincrement())
  user    User  @relation(fields: [userId], references: [id])
  userId  Int
  topic   Topic @relation(fields: [topicId], references: [id])
  topicId Int

  @@unique([userId, topicId]) // A user can only learn a topic once
}

// --- Chat System ---

model ChatSession {
  id       Int           @id @default(autoincrement())
  user     User          @relation(fields: [userId], references: [id])
  userId   Int // <-- 2. REMOVED @unique
  topic    Topic         @relation(fields: [topicId], references: [id])
  topicId  Int // <-- 3. REMOVED @unique
  messages ChatMessage[]

  @@unique([userId, topicId]) // <-- 4. ADDED THIS (THE FIX)**
}

model ChatMessage {
  id        Int         @id @default(autoincrement())
  session   ChatSession @relation(fields: [sessionId], references: [id])
  sessionId Int
  role      String // "user" or "assistant"
  content   String      @db.Text
  createdAt DateTime    @default(now())
}
